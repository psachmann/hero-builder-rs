{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.direnv": true,
    "**/target": true,
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.includeLanguages": {
    "rust": "typescriptreact"
  },
  "cSpell.words": [
    "Arkane",
    "github",
    "jfif",
    "leptos",
    "leptosfmt",
    "psachmann",
    "Sachmann",
    "uuid",
    "Uuid"
  ],
  "cSpell.language": "en,de-DE"
}